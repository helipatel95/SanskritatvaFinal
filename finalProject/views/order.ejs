<!DOCTYPE html>
<html>

<head>
    <title>Sanskritatva:Books</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
  />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
         
        function w3_open() {
            document.getElementById("main").style.marginLeft = "25%";
            document.getElementById("mySidebar").style.width = "25%";
            document.getElementById("mySidebar").style.display = "block";
            document.getElementById("openNav").style.display = 'none';
        }

        function w3_close() {
            document.getElementById("main").style.marginLeft = "0%";
            document.getElementById("mySidebar").style.display = "none";
            document.getElementById("openNav").style.display = "inline-block";
        }
        </script>
</head>

<body>

    <%- include('includes/sidebar.ejs') %>
    
    <div id="main">



        <header>


            <div class="single-product-banner-text">
                <div class="single-product-paurchesh-div">
                    
                            <h3 class="animate__animated animate__bounce">All Orders</h3>
                </div>
                <%- include('includes/header.ejs') %>
            </div>
        </header>

       
       
        <div class="container" style="margin-top: 3%;">
            <% for(var i=0; i < invoicedata.length; i++) { %>
            <div class="row" style="border: 1px solid black; padding: 10px; margin-top: 10px;">
                <div class="row">
                    <div class="col-md-3">
                        Name:
                    </div>
                    <div class="col-md-9">
                       <%= invoicedata[i].data[0].fname %> &nbsp; <%= invoicedata[i].data[0].lname %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        Conatct :
                    </div>
                    <div class="col-md-9">
                        <%= invoicedata[i].data[0].contactNo %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        Email :
                    </div>
                    <div class="col-md-9">
                        <%= invoicedata[i].data[0].emailAddress %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        Order Id :
                    </div>
                    <div class="col-md-9">
                        <%= invoicedata[i].data[0].invoice_id %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        Order Date :
                    </div>
                    <div class="col-md-9">
                        <%= invoicedata[i].data[0].invoice_date %>
                    </div>
                </div>
                <div class="row" style="margin-top: 20px;">
                    <div class="col-md-4">
                            Item
                    </div>
                    <div class="col-md-4">
                            Qty
                    </div>
                    <div class="col-md-4">
                            Price
                    </div>
                </div>
                <% for(var j=0; j < invoicedata[i].data.length; j++) { %>
                <div class="row" style="margin-top: 10px;">
                    <div class="col-md-4">
                        <%= invoicedata[i].data[j].product_name %>
                    </div>
                    <div class="col-md-4">
                            1
                    </div>
                    <div class="col-md-4">
                        <%= invoicedata[i].data[j].product_price %>.00
                    </div>
                </div>
                <% } %>
                <hr>
                <div class="row">
                    <div class="col-md-4">
                            
                    </div>
                    <div class="col-md-4">
                            
                    </div>
                    <div class="col-md-4">
                            Total : <%= invoicedata[i].data[0].invoice_total %>.00 CAD
                    </div>
                </div>
                    
            </div>
            <% } %>
           


        </div>

        </div>

        <%- include('includes/footer.ejs') %>
    </div>
</body>

</html>