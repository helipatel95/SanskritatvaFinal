<!DOCTYPE html>
<html>

<head>
    <title>Sanskritatva:Books</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
  />
    <script>
        function w3_open() {
            document.getElementById("main").style.marginLeft = "25%";
            document.getElementById("mySidebar").style.width = "25%";
            document.getElementById("mySidebar").style.display = "block";
            document.getElementById("openNav").style.display = 'none';
        }

        function w3_close() {
            document.getElementById("main").style.marginLeft = "0%";
            document.getElementById("mySidebar").style.display = "none";
            document.getElementById("openNav").style.display = "inline-block";
        }
    </script>
</head>

<body>

    <%- include('includes/sidebar.ejs') %>
    
    <div id="main">



        <header>


            <div class="books-banner-text">
                <div class="product-paurchesh-div">
                    
                            <h1 class="animate__animated animate__bounce"><%= pagename %></h1>
                </div>
                <%- include('includes/header.ejs') %>
            </div>
        </header>
       
        <div class="container" style="margin-top: 3%;">

            
            <hr>
            <div class="grid-container-collection">

                <%if(data.length == 0){%>
                       <h4 style="text-align: center;">No data Found</h4>
                    <% } else { %>
                        <% for(var i=0; i < data.length; i++) { %>
                            <div class="card" style="margin:2%;">
                                <img class="card-img-top" src="/images/<%= data[i].product_image %>" alt="Card image" style="width:100%">
                                <div class="card-body">
                                    <div style="padding: 20px;">
                                    <div class="row">
                                        <div class="col-md-12"><h4 class="card-title" ><%= data[i].product_name %></h4></div>
                                    </div> 
                                    <div class="row">
                                        <div class="col-md-12">Price : $ <%= data[i].product_price %>.00</div>
                                    </div>
                                    </div>
                                    <div class="row" style="margin-top: 5px;padding-right: 15px;padding-left: 15px;"> 
                                        <!-- <div class="col-md-6" style="padding: 0%;">
                                            <a href="./<%= pagename %>/<%= data[i].product_id %>"  class="btn btn-outline-dark" style="background-color: black;">Add To Cart</a>
                                        </div> -->
                                        <div class="col-md-12" style="padding: 0%;">
                                            <a href="./<%= pagename %>/<%= data[i].product_id %>" class="btn btn-outline-dark" style="background-color: black;">View Details</a>
                                        </div>
                                    </div>
                               
                                </div>
                            </div>
        
                            
                         <% } %>
        
                       <%}%>

                              
            </div>
               
                
                


            </div>






        </div>

        <%- include('includes/footer.ejs') %>
    </div>
</body>

</html>